<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="{{ asset('img/logo.png') }}">

    <title>Connexion</title>

   <!-- Bootstrap core CSS -->
    <link href="{{ asset('lib/bootstrap.min.css') }}" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link href="{{ asset('css/login.css') }}" rel="stylesheet">
  </head>

  <body class="text-center">
    <form class="form-signin" method="POST" action="{{ path('login_check') }}">
      <div>
        <img class="mb-4" src="{{ asset('img/login.png') }}" alt="" width="100" height="100">
      </div>
      <h1 class="h3 mb-3 font-weight-normal">Connectez-vous !</h1>

      {% if error %}
        <h5>Connexion échouée !</h5>
        <br>
      {% endif %}

      <input type="text" id="inputEmail" class="form-control" placeholder="Téléphone" required autofocus name="_username">
      <input type="password" id="inputPassword" class="form-control" placeholder="Mot de passe" required name="_password">

      <input type="hidden" name="_target_path" value="{{ app.request.get('redirect_to') }}"/>
      <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>

       <div class="checkbox mb-3">
        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        <label for="remember_me">Se souvenir de moi</label>
      </div>

      <button class="btn btn-lg btn-warning btn-block btn-orange" type="submit">
        Connexion
      </button>
    </form>
  </body>
</html>
